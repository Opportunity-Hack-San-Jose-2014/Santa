.container
  .header
    %ul.nav.nav-pills.pull-right
      %li.active
        %a{:href => "/"} Donor
      %li
        %a{:href => "/drivers"} Driver
      %li
        %a{:href => "/tags"} Volunteer
    %h3.text-muted Santa
  .jumbotron{:style => "margin-top:60px"}
    .row
      .col-md-5
        = image_tag("santacrew.png", :style => "width:100%")
      .col-md-7
        %h1 Christmas for All
        %p.lead Family Giving Tree makes kids' dreams come true, one gift at a time. We make the process of delivering gifts simple and easy.

        If you're a donor, enter the code on your gift tag below or scan the QR code.
    .row{:style => "margin-top:50px"}
      .col-md-8
        %input#donor_info.form-control{:style => "background-image: none; background-position: 0% 0%; background-repeat: repeat;", :type => "text", :placeholder => "Enter Gift Code", :style => "height:64px"}/
      .col-md-4
        %p
          %a#donor.btn.btn-lg.btn-success{:role => "button"} Submit Gift Code

- if Rails.env.production?
  = javascript_tag do
    url = "#{j "http://santa-giving-tree.herokuapp.com/tags/"}";
- else
  = javascript_tag do
    url = "#{j "http://localhost:3000/tags/"}";
= javascript_include_tag "home"
